<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :destination, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :destination, :class => 'form-control' %>
    </div>
    <%=f.error_span(:destination) %>
  </div>
  <div class="form-group">
    <%= f.label :mass, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mass, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mass) %>
  </div>
  <div class="form-group">
    <%= f.label :qtty, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :qtty, :class => 'form-control' %>
    </div>
    <%=f.error_span(:qtty) %>
  </div>
  <div class="form-group">
    <%= f.label :reference, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :reference, :class => 'form-control' %>
    </div>
    <%=f.error_span(:reference) %>
  </div>
  <div class="form-group">
    <%= f.label :dom, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dom, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dom) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
