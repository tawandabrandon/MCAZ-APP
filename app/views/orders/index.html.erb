<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Destination</th>
      <th>Mass</th>
      <th>Qtty</th>
      <th>Reference</th>
      <th>Dom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.title %></td>
        <td><%= order.destination %></td>
        <td><%= order.mass %></td>
        <td><%= order.qtty %></td>
        <td><%= order.reference %></td>
        <td><%= order.dom %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

